{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "baseUrl": "src"
  }
}
